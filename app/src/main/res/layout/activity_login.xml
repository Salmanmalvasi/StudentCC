<?xml version="1.0" encoding="utf-8"?><!-- NOTE: The same layout is used for the LoginActivity.java and MoodleLoginDialogFragment.java -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?android:colorBackground"
    android:orientation="vertical"
    tools:context=".activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="40dp"
                android:paddingTop="40dp"
                android:paddingEnd="40dp"
                android:paddingBottom="60dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="40dp">

                    <TextView
                        android:id="@+id/text_view_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/login_header"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="36sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_view_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="@string/login_description"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="16sp" />

                    <!-- Student Type Selection -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/student_type"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_day_scholar"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="@string/day_scholar"
                            android:textAllCaps="false"
                            app:cornerRadius="8dp"
                            app:strokeColor="?attr/colorPrimary"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_hosteller"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="@string/hosteller"
                            android:textAllCaps="false"
                            app:cornerRadius="8dp"
                            app:strokeColor="?attr/colorPrimary"
                            app:strokeWidth="2dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Hostel Selection (Hidden by default) -->
                    <LinearLayout
                        android:id="@+id/layout_hostel_selection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/select_gender"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_male"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="@string/male"
                            android:textAllCaps="false"
                            app:cornerRadius="8dp"
                            app:strokeColor="?attr/colorPrimary"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_female"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="@string/female"
                            android:textAllCaps="false"
                            app:cornerRadius="8dp"
                            app:strokeColor="?attr/colorPrimary"
                            app:strokeWidth="2dp" />
                        </LinearLayout>


                        <!-- Mess Type Selection -->
                        <LinearLayout
                            android:id="@+id/layout_mess_type_selection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/select_mess_type"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="12dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="3">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_veg"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:text="@string/vegetarian"
                            android:textAllCaps="false"
                            app:cornerRadius="8dp"
                            app:strokeColor="?attr/colorPrimary"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_non_veg"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:text="@string/non_vegetarian"
                            android:textAllCaps="false"
                            app:cornerRadius="8dp"
                            app:strokeColor="?attr/colorPrimary"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_special"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:text="@string/special"
                            android:textAllCaps="false"
                            app:cornerRadius="8dp"
                            app:strokeColor="?attr/colorPrimary"
                            app:strokeWidth="2dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Block Selection -->
                        <LinearLayout
                            android:id="@+id/layout_block_selection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/select_block"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="12dp" />

                            <LinearLayout
                                android:id="@+id/layout_male_blocks"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="3">

                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/button_d1_block"
                                        style="@style/Widget.Material3.Button.OutlinedButton"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginEnd="4dp"
                                        android:text="D1"
                                        android:textAllCaps="false"
                                        app:cornerRadius="8dp" />

                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/button_d2_block"
                                        style="@style/Widget.Material3.Button.OutlinedButton"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginStart="4dp"
                                        android:layout_marginEnd="4dp"
                                        android:text="D2"
                                        android:textAllCaps="false"
                                        app:cornerRadius="8dp" />

                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/button_a_block"
                                        style="@style/Widget.Material3.Button.OutlinedButton"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginStart="4dp"
                                        android:text="A"
                                        android:textAllCaps="false"
                                        app:cornerRadius="8dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/button_c_block"
                                        style="@style/Widget.Material3.Button.OutlinedButton"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginEnd="8dp"
                                        android:text="C"
                                        android:textAllCaps="false"
                                        app:cornerRadius="8dp" />

                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/button_e_block"
                                        style="@style/Widget.Material3.Button.OutlinedButton"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginStart="8dp"
                                        android:text="E"
                                        android:textAllCaps="false"
                                        app:cornerRadius="8dp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_female_blocks"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                android:visibility="gone">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/button_cb_block"
                                    style="@style/Widget.Material3.Button.OutlinedButton"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="8dp"
                                    android:text="CB"
                                    android:textAllCaps="false"
                                    app:cornerRadius="8dp" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/button_cg_block"
                                    style="@style/Widget.Material3.Button.OutlinedButton"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="8dp"
                                    android:text="CG"
                                    android:textAllCaps="false"
                                    app:cornerRadius="8dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Room Number Input -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_room_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:hint="@string/room_number"
                            android:visibility="gone"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxStrokeColor="?attr/colorPrimary"
                            app:boxStrokeWidth="1dp"
                            app:startIconDrawable="@drawable/ic_home"
                            app:startIconTint="?attr/colorPrimary">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_text_room_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autofillHints="Enter your room number"
                                android:inputType="number" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="24dp"
                        android:background="?attr/colorPrimary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/username"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:boxStrokeWidth="1dp"
                        app:endIconMode="clear_text"
                        app:startIconDrawable="@drawable/ic_profile_filled"
                        app:startIconTint="?attr/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints="Enter your VTOP username"
                            android:inputType="textCapCharacters" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="@string/password"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:boxStrokeWidth="1dp"
                        app:endIconMode="password_toggle"
                        app:startIconDrawable="@drawable/ic_password"
                        app:startIconTint="?attr/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints="Enter your VTOP password"
                            android:inputType="textPassword" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_sign_in"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="20dp"
                        android:padding="16dp"
                        android:text="@string/sign_in"
                        android:textAllCaps="true"
                        android:textColor="?attr/colorOnPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="8dp"
                        app:elevation="2dp" />

                    <TextView
                        android:id="@+id/text_view_thank_you"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="@string/thank_you_1k_split"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp" />

                    <ProgressBar
                        android:id="@+id/progress_bar_loading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:indeterminateTint="?attr/colorPrimary"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/button_privacy"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        android:text="@string/privacy"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</LinearLayout>
