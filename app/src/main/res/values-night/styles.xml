<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.VTOP.AttendanceTabLayout" parent="Widget.Material3.TabLayout">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:textAlignment">center</item>
        <item name="tabBackground">@drawable/background_primary_tab_item</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicator">@drawable/background_primary_tab_item</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextColor">?attr/colorOnSurface</item>
        <item name="tabUnboundedRipple">true</item>
    </style>

</resources>
