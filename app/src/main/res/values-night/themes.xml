    <!-- Dark Mode Theme -->
    <style name="Base.Theme.VTOP" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Dark Mode Color Palette -->
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryBlack</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryContainerBlack</item>
        <item name="colorOnPrimaryContainer">@color/colorOnPrimaryContainerBlack</item>

        <item name="colorSecondary">@color/colorSecondaryBlack</item>
