    <item name="attendance_subtext_color">@color/colorSecondaryBlack</item>
    <item name="attendance_day_text_color">@color/colorSecondaryBlack</item>
    <item name="attendance_percentage_text_high_color">@android:color/white</item>
    <item name="attendance_percentage_text_medium_color">@android:color/white</item>
    <item name="attendance_percentage_text_low_color">@android:color/white</item>

